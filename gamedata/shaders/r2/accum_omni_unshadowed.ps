  // Sample the fat framebuffer:
  //half4 _P		= tex2Dproj 	(s_position, tc); 
  //half4 _N		= tex2Dproj 	(s_normal,   tc); 

	half 	m	= xmaterial	;
# ifndef USE_R2_STATIC_SUN
			m 	= GBuffer.MaterialID		;
# endif

  half	rsqr;
